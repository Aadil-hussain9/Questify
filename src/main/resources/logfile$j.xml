<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </Console>

        <!-- AWS CloudWatch Appender
        <Appender name="CloudWatch" type="AWSCloudWatchAppender">
            <LogGroupName>MyLogGroup</LogGroupName>
            <LogStreamName>MyLogStream</LogStreamName>
            <Region>us-east-1</Region>
            <Credentials>
                <accessKey>your-access-key</accessKey>
                <secretKey>your-secret-key</secretKey>
            </Credentials>
            <Layout type="PatternLayout">
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n</Pattern>
            </Layout>
        </Appender>-->
    </Appenders>

    <Loggers>
        <!-- Root Logger -->
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="CloudWatch" />
        </Root>
    </Loggers>
</Configuration>
